void setup() {
  Serial.begin(9600);

  if(!display.begin(SSD1306_SWITCHCAPVCC, SCREEN_ADDRESS)) {
    Serial.println(F("SSD1306 allocation failed"));
    for(;;);
  }

  // --- 1. SHOW LOGO ---
  display.clearDisplay();
  display.drawBitmap(0, 0, company_logo, 128, 64, WHITE);
  display.display();
  delay(3000); // Wait 3 seconds
}

void loop() {
  // --- 2. READ SENSOR ---
  int analogValue = analogRead(SENSOR_PIN);

  // --- 3. SAFETY CHECK ---
  // If the sensor is loose or not connected, value will be 0 or 1023.
  // This prevents the math from crashing.
  if (analogValue <= 0 || analogValue >= 1023) {
    display.clearDisplay();
    display.setTextColor(WHITE);
    display.setTextSize(1);
    display.setCursor(0, 0);
    display.println("Sensor Error!");
    display.setCursor(0, 20);
    display.print("Value: ");
    display.print(analogValue);
    display.setCursor(0, 40);
    display.println("Check Wiring");
    display.display();
    delay(1000);
    return; // Restart loop
  }

  // --- 4. CALCULATE TEMPERATURE ---
  float celsius = 1 / (log(1 / (1023. / analogValue - 1)) / BETA + 1.0 / 298.15) - 273.15;

  // --- 5. DISPLAY RESULT ---
  display.clearDisplay();
  display.setTextColor(WHITE); // Ensure text is white
  
  // Header
  display.drawRect(0, 0, 128, 64, WHITE); // Border
  display.setTextSize(1);
  display.setCursor(35, 5);
  display.print("Current");

  // Temperature
  display.setTextSize(3);
  display.setCursor(20, 25);
  display.print(celsius, 0); 
  display.setTextSize(1);
  display.cp437(true);
  display.write(167); // Degree symbol
  display.setTextSize(2);
  display.print("C");

  display.display(); 
  delay(1000); 
}
